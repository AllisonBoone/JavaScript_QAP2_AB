<%- include('partials/header') %>

<main class="main-content index_container">

    <h1>Leaderboard</h1>
    
    <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Streak</th>
                <th>Questions Correct</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <!-- Gives the top 10 streaks, the number of questions correct and the date of when the streak was gotten -->
            <% leaderboards.forEach(function(entry, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= entry.streak %></td>
                    <td><%= entry.correctAnswers %></td>
                    <td><%= entry.date.toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</main>
</body>
</html>